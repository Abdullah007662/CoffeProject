@model List<UserViewModel>
@{
    ViewData["Title"] = "Kullanıcılar";
}
<h1>@ViewData["Title"]</h1>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Kullanıcı Adı</th>
                <th>E-posta</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Kayıt Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a asp-action="AssignRole" asp-route-userId="@user.Id" class="btn btn-primary btn-sm">Rol Ata</a>
                        <a asp-action="UserRoles" asp-route-userId="@user.Id" class="btn btn-info btn-sm">Roller</a>
                        <a asp-action="UserTokens" asp-route-userId="@user.Id" class="btn btn-warning btn-sm">Tokenlar</a>
                        <a asp-action="ResetPassword" asp-route-userId="@user.Id" class="btn btn-danger btn-sm">Şifre Sıfırla</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
